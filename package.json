{
  "name": "stargety-oasis",
  "version": "1.0.0",
  "description": "Virtual World Platform with Chat, Video Calls, and 2D World",
  "main": "server/dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm start",
    "build": "npm run build:server && npm run build:client",
    "build:server": "cd server && npm run build",
    "build:client": "cd client && npm run build",
    "start": "cd server && npm start",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "clean": "npm run clean:server && npm run clean:client",
    "clean:server": "cd server && npm run clean",
    "clean:client": "cd client && rm -rf build",
    "docker:build": "docker build -t stargety-oasis .",
    "docker:run": "docker run -p 3001:3001 stargety-oasis",
    "docker:dev": "docker-compose up --build",
    "docker:prod": "docker-compose --profile production up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "virtual-world",
    "chat",
    "video-call",
    "phaser",
    "react",
    "nodejs",
    "socket.io",
    "jitsi"
  ],
  "author": "Stargety Oasis Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
