{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*",
        "scripts/**/*",
        "prisma/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}